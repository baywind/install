	valueWhenEmpty = "Teacher";
	escapeHTML = false;
}

ClassSelector: WOConditional {
	condition = tabindex;
	
	negate = true;
}

ClassListing1: ClassListing {
	selection = currClass;
	width = "100%";
	selectAction = selectClass;
	editingContext = ec;
	onClick = onClick;
}

TeacherSelector: WOConditional {
	condition = tabindex;
	negate = false;
}

TeacherSelector2: PersListing {
	entity = "Teacher";
