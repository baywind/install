}

UnSelected: WOConditional {
	condition = isSelected;
	negate = true;
}

IfEduPlan: WOConditional {
	condition = isEduPlan;
}


GenericContainer: OnClickContainer {
	class = rowStyle;
	elementName = "tr";
	invokeAction = select;
	onclick = onClick;
}

CycleGrade: WOString {
